jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Install Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18
          cache: npm
          cache-dependency-path: fastlanef1shop/package-lock.json

      - name: Install dependencies
        run: npm ci
        working-directory: fastlanef1shop

      - name: Build
        env:
          BASE_PATH: '/FastLaneF1Shop'
        run: npm run build
        working-directory: fastlanef1shop

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: fastlanef1shop/build/